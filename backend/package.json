    "@lucia-auth/adapter-mongodb": "^1.0.3",
    "@node-rs/argon2": "^2.0.0",
    "arctic": "^1.9.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "lucia": "^3.2.1",
    "mongoose": "^8.7.1",
    "oslo": "^1.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.1-nightly.20240914",
