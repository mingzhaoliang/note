{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run watch-compile\" \"npm run watch-dev\" \"tsc --noEmit -w\"",
    "watch-dev": "nodemon -w \"dist/**/*\" -e js ./dist/index.js",
    "watch-compile": "swc src -w -d dist --strip-leading-paths",
    "build": "tsc --noEmit && swc src -d dist --strip-leading-paths",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
